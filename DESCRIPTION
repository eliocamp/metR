Type: Package
Package: metR
Language: en-GB
Title: Tools for Easier Analysis of Meteorological Fields
Version: 0.8.9000
Authors@R: 
    c(person(given = "Elio",
           family = "Campitelli",
           role = c("cre", "aut"),
           email = "elio.campitelli@cima.fcen.uba.ar",
