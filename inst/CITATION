citHeader("To cite metR in publications use:")
note <- sprintf("R package version %s", meta$Version)

citEntry(
  entry    = "Manual",
  title    = paste0("metR: ", meta$Title),
  author   = meta$Author,
  year     = 2021,
  note     = note,
  url      = meta$URL,
  doi      = "10.5281/zenodo.2593516",
  textVersion = ""
)
